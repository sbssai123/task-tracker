<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :title %>
    <%= text_input f, :title, class: "form-control" %>
    <%= error_tag f, :title %>
  </div>

  <div class="form-group">
    <%= label f, :desc %>
    <%= textarea f, :desc, class: "form-control" %>
    <%= error_tag f, :desc %>
  </div>

  <%= if not @new and @task.user_id == @current_user.id do %>
    <div class="form-group">
      <%= label f, :completed %>
      <%= checkbox f, :completed, class: "form-control" %>
      <%= error_tag f, :completed %>
    </div>
  <% end %>

  <%= if @new or (not @new and not @task.completed) do %>
    <div class="form-group">
      <%= label f, :user_id %>
      <%= select f, :user_id, Enum.map(@users, fn u -> {u.first_name, u.id} end)%>
      <%= error_tag f, :user_id %>
    </div>
  <% end %>

  <%= if not @new and @task.user_id == @current_user.id do %>
    <div class="form-group">
      <%= label f, :duration %>
      <%= time_select f, :duration, class: "form-control", minute: [options: [0, 15, 30, 45]] %>
      <%= error_tag f, :duration %>
    </div>
  <% end %>

  <div>
    <%= submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
